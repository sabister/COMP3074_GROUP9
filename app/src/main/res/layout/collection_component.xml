<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/collectionCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/colorSurface"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeColor="@color/dividerColor"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Restaurant I want to try"
            android:textColor="@color/colorOnBackground"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_det"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Details (filled look via backgroundTint) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_det"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minHeight="40dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Details"
            android:textAllCaps="false"
            android:textColor="@color/colorOnPrimary"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Edit (outlined look using stroke) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minHeight="40dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Edit"
            android:textAllCaps="false"
            android:textColor="@color/colorSecondary"
            app:cornerRadius="12dp"
            app:strokeColor="@color/colorSecondary"
            app:strokeWidth="1dp"
            app:backgroundTint="@android:color/transparent"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_det"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Delete (text button with error color) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minHeight="40dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@color/colorError"
            app:cornerRadius="12dp"
            app:backgroundTint="@android:color/transparent"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
