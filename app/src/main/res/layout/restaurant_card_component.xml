<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/restaurantCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/card_background"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvRestaurantTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Restaurant Title"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDetails"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Optional subtitle/description -->
    <TextView
        android:id="@+id/tvRestaurantSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Short description..."
        android:textColor="#DDDDDD"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/tvRestaurantTitle"
        app:layout_constraintEnd_toEndOf="@+id/tvRestaurantTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvRestaurantTitle" />

    <!-- Details -->
    <Button
        android:id="@+id/btnDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Edit -->
    <Button
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/btnDetails"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Delete -->
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/btnEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
